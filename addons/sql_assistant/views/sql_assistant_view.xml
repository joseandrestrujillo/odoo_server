<odoo>
  <data>
    <menuitem id="menu_sql_assistant" name="SQL Assistant" parent="base.menu_tools"/>
    <record model="ir.ui.view" id="view_sql_assistant_form">
      <field name="name">SQL Assistant Form</field>
      <field name="model">model_sql_assistant</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="query"/>
            </group>
            <button name="execute_query" string="Execute Query" type="object" class="oe_highlight"/>
            <group>
              <field name="result"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>
    <record model="ir.actions.act_window" id="action_sql_assistant">
      <field name="name">SQL Assistant</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">model_sql_assistant</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="target">current</field>
    </record>
    <menuitem id="menu_sql_assistant_form" name="SQL Assistant" action="action_sql_assistant" parent="menu_sql_assistant"/>
  </data>
</odoo>
